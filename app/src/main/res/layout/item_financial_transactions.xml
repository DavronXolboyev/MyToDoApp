<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_finance_parent_layout"
    android:background="@drawable/item_style_single"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_layout_container"
        android:layout_width="wrap_content"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_finance_event_name"
            android:fontFamily="@font/inter_semi_bold"
            android:text="@string/to_do"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_finance_card_name"
            android:fontFamily="@font/inter_semi_bold"
            android:text="@string/to_do"
            android:textColor="@color/text_hint_color"
            android:textSize="16sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_layout_container2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="end"
        android:layout_marginHorizontal="8dp"
        android:layout_toStartOf="@+id/item_finance_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_finance_event_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semi_bold"
            tools:text="$130.45"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_finance_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semi_bold"
            tools:text="26.07.2022"
            android:textColor="@color/text_hint_color"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/item_finance_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_right"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        />

</RelativeLayout>