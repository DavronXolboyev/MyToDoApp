<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_finance_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_margin="2dp"
    android:background="@drawable/item_style_single">


    <TextView
        android:id="@+id/item_finance_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/inter_semi_bold"
        android:text="@string/to_do"
        android:textColor="@color/text_color"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/item_layout_container2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="8dp"
        android:layout_toStartOf="@+id/item_finance_img"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_finance_event_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semi_bold"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            tools:text="$130.45" />

        <TextView
            android:id="@+id/item_finance_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semi_bold"
            android:textColor="@color/text_hint_color"
            android:textSize="14sp"
            tools:text="26.07.2022" />

    </LinearLayout>

    <ImageView
        android:id="@+id/item_finance_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:src="@drawable/ic_import" />

</RelativeLayout>